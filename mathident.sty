\def\@setmcodes#1#2#3{%
    \bgroup%
        \count0=#1%
        \count1=#3%
        \loop%
            \global\mathcode\count0=\count1%
            \ifnum \count0<#2%
                \advance\count0 by 1%
                \advance\count1 by 1%
        \repeat%
    \egroup%
}

\@setmcodes{`A}{`Z}{"7\hexnumber@\symitalics41}
\@setmcodes{`a}{`z}{"7\hexnumber@\symitalics61}


